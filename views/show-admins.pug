html
  head
    link(rel='shortcut icon', type='image/x-icon', href='static/favicon.ico')
    link(href='static/css/bootstrap.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/home') Е-горски
        ul.nav.navbar-nav
          li
            a(href='/home') Начало
          if !result.IsAdmin
            li
              a(href='/send') Сигнализирай
            li
              a(href='/response') Обратна връзка
            li
              a(href='/help') Помощ          
    .container
      .row
        .col-md-6.col-md-offset-3
            h1.text-center(style="color: brown") Администратори
            hr
            .list-group
                each npo in result.organizations
                    if npo.username != result.me.username
                       a.list-group-item.list-group-item-success(href="/chat/" + npo.username)
                         h3.list-group-item-heading.text-center= npo.username
            h1.text-center(style="color: brown") Потребители
            hr
            .list-group
                each user in result.users
                    if user.username != result.me.username
                      a.list-group-item.list-group-item-success(href="/chat/" + user.username)
                        h3.list-group-item-heading.text-center= user.username
    script(src='static/js/jquery.js')
    script(src='static/js/bootstrap.min.js')
    script(src='static/js/show-admins-logic.js')